<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Posts</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- FontAwesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            transition: background-color 0.3s, color 0.3s;
        }

        /* Light Mode */
        body.light-mode {
            background-color: #f8f9fa;
            color: #343a40;
        }

        /* Dark Mode */
        body.dark-mode {
            background-color: #212529;
            color: #f8f9fa;
        }

        /* Navbar */
        .navbar {
            padding: 15px;
            transition: background-color 0.3s, color 0.3s;
        }

        .navbar.light-mode {
            background-color: #ffffff;
            color: #343a40;
        }

        .navbar.dark-mode {
            background-color: #343a40;
            color: #f8f9fa;
        }

        .navbar-brand {
            font-weight: bold;
        }

        .navbar-toggler {
            border: none;
        }

        /* Dark Mode Icon */
        .dark-mode-toggle {
            cursor: pointer;
            font-size: 1.2rem;
        }

        /* Search Bar */
        .search-bar {
            margin: 20px 0;
            position: relative;
        }

        .search-bar input {
            width: 100%;
            padding: 10px;
            border-radius: 25px;
            border: none;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .search-bar .fa-search {
            position: absolute;
            right: 15px;
            top: 10px;
            color: #6c757d;
        }

        /* Parallax Carousel */
        .parallax {
            background-attachment: fixed;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            height: 400px;
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            position: relative;
            z-index: 1;
            border-radius: 10px;
            overflow: hidden;
        }

        .parallax-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 2;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 2.5rem;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7);
        }

        .carousel-item img {
            width: 100%;
            height: 400px;
            object-fit: cover;
        }

        /* Blog Posts */
        .blog-post {
            background-color: #ffffff;
            margin-bottom: 40px;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: flex-start;
            transition: background-color 0.3s, color 0.3s;
        }

        .blog-post.dark-mode {
            background-color: #343a40;
        }

        .blog-post-thumbnail {
            margin-right: 20px;
        }

        .blog-post-thumbnail img {
            width: 150px;
            height: auto;
            border-radius: 5px;
        }

        .blog-post-title {
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

        .read-more {
            display: inline-block;
            margin-top: 10px;
            color: #007bff;
            text-decoration: none;
        }

        .read-more:hover {
            text-decoration: underline;
        }

        /* Footer */
        footer {
            padding: 20px 0;
            transition: background-color 0.3s, color 0.3s;
        }

        footer.light-mode {
            background-color: #f8f9fa;
            color: #343a40;
        }

        footer.dark-mode {
            background-color: #343a40;
            color: #f8f9fa;
        }
    </style>
</head>

<body class="light-mode">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light-mode">
        <a class="navbar-brand" href="/">My Blog</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
            aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
            </ul>
            <div class="ml-3 dark-mode-toggle" onclick="toggleDarkMode()">
                <i class="fas fa-moon"></i>
            </div>
        </div>
    </nav>

    <!-- Search Bar -->
    <div class="container mt-5">
        <div class="search-bar">
            <input type="text" id="searchInput" class="form-control" placeholder="Search posts..." oninput="filterPosts()">
            <i class="fas fa-search"></i>
        </div>
    </div>

    <!-- Parallax Carousel -->
    <div class="parallax mt-5" style="background-image: url('your-background-image-url.jpg');">
        <div class="parallax-overlay">Welcome to My Blog</div>
        <div id="blogCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <% posts.forEach((post, index) => { %>
                <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                    <a href="/posts/<%= post.id %>">
                        <img src="<%= post.thumbnail %>" class="d-block w-100" alt="<%= post.title %> Thumbnail">
                    </a>
                </div>
                <% }) %>
            </div>
            <a class="carousel-control-prev" href="#blogCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#blogCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container mt-5" id="postsContainer">
        <h1>All Posts</h1>
        <% posts.forEach(post => { %>
        <div class="blog-post light-mode" data-title="<%= post.title.toLowerCase() %>" data-content="<%= post.content.toLowerCase() %>">
            <div class="blog-post-thumbnail">
                <img src="<%= post.thumbnail %>" alt="<%= post.title %> Thumbnail">
            </div>
            <div class="blog-post-content">
                <h2 class="blog-post-title"><%= post.title %></h2>
                <div>
                    <%- post.content.substring(0, 100) %>...
                </div>
                <a href="/posts/<%= post.id %>" class="read-more">Baca Selengkapnya</a>
            </div>
        </div>
        <% }) %>
    </div>

    <!-- Footer -->
    <footer class="text-center light-mode mt-5">
        <div class="container p-4">
            <p>&copy; 2024 My Blog. All rights reserved.</p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Dark Mode Toggle Script -->
    <script>
        function toggleDarkMode() {
            const body = document.body;
            const navbar = document.querySelector('.navbar');
            const blogPosts = document.querySelectorAll('.blog-post');
            const footer = document.querySelector('footer');

            body.classList.toggle('dark-mode');
            body.classList.toggle('light-mode');

            navbar.classList.toggle('dark-mode');
            navbar.classList.toggle('light-mode');

            footer.classList.toggle('dark-mode');
            footer.classList.toggle('light-mode');

            blogPosts.forEach(post => {
                post.classList.toggle('dark-mode');
                post.classList.toggle('light-mode');
            });

            const icon = document.querySelector('.dark-mode-toggle i');
            icon.classList.toggle('fa-moon');
            icon.classList.toggle('fa-sun');
        }
    </script>

    <!-- JavaScript for OnTyping Search -->
    <script>
        function filterPosts() {
            const searchInput = document.getElementById('searchInput').value.toLowerCase();
            const posts = document.querySelectorAll('.blog-post');

            posts.forEach(post => {
                const title = post.getAttribute('data-title');
                const content = post.getAttribute('data-content');

                if (title.includes(searchInput) || content.includes(searchInput)) {
                    post.style.display = '';
                } else {
                    post.style.display = 'none';
                }
            });
        }
    </script>
</body>

</html>
